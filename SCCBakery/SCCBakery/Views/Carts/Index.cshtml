@model IEnumerable<SCCBakery.Models.Invoice>
    @using SCCBakery.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TheProduct.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TheProduct.ProductDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TheProduct.ProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TheProduct.ImagePath)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>

@{
    var cartItems = Session["CartItems"] as List<Invoice>;

    foreach (var item in cartItems)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TheProduct.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TheProduct.ProductDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TheProduct.ProductPrice)
        </td>
        <td>
            <img src="@Url.Content("~/Images/ProductImages/" + item.TheProduct.ImagePath)" height="100" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
        </td>
    </tr>
        }
    }

</table>
@Html.ActionLink("Submit Order", "CreateOrder")